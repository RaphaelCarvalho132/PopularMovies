<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".movies.activity.MoviesActivity">

        <ImageView
            android:id="@+id/iv_movie_detail_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_movie_detail_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_movie_detail_poster"
            app:layout_constraintTop_toTopOf="@+id/iv_movie_detail_poster"
            tools:text="@tools:sample/full_names" />

        <TextView
            android:id="@+id/tv_movie_detail_rating_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/movie_detail_rating"
            app:layout_constraintStart_toStartOf="@+id/tv_movie_detail_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_detail_title" />

        <TextView
            android:id="@+id/tv_movie_detail_rating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="@+id/tv_movie_detail_title"
            app:layout_constraintStart_toEndOf="@+id/tv_movie_detail_rating_label"
            app:layout_constraintTop_toTopOf="@+id/tv_movie_detail_rating_label"
            tools:text="4.7" />

        <TextView
            android:id="@+id/tv_movie_detail_release_date_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/movie_detail_release_date"
            app:layout_constraintStart_toStartOf="@+id/tv_movie_detail_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_detail_rating" />

        <TextView
            android:id="@+id/tv_movie_detail_release_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="@+id/tv_movie_detail_title"
            app:layout_constraintStart_toEndOf="@+id/tv_movie_detail_release_date_label"
            app:layout_constraintTop_toTopOf="@+id/tv_movie_detail_release_date_label"
            tools:text="@tools:sample/date/ddmmyy" />

        <TextView
            android:id="@+id/tv_movie_detail_synopsis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            app:layout_constraintEnd_toEndOf="@+id/tv_movie_detail_title"
            app:layout_constraintStart_toStartOf="@+id/iv_movie_detail_poster"
            app:layout_constraintTop_toBottomOf="@+id/iv_movie_detail_poster"
            tools:text="@tools:sample/lorem" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>